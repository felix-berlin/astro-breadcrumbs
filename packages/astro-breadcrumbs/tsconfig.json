{
  "extends": "astro/tsconfigs/strict",
  "include": ["index.ts", "src/**/*.ts", "src/**/*.astro", "src/env.d.ts"],
  "exclude": [
    "node_modules",
    "src/tests/**/*.spec.ts",
    "src/tests/**/*.test.ts"
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "paths": {
      "@lib/*": ["./src/lib/*"]
    },
    "types": ["astro/client", "vitest/globals"],
    // https://bobbyhadz.com/blog/typescript-module-can-only-be-default-imported-esmoduleinterop
    "esModuleInterop": true
  }
}
