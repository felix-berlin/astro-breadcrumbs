---
interface BreadcrumbLinkProps {
  attrs: Record<string, any>
  mainBemClass: string
  isIndex: boolean
  isCurrent: boolean
  disableDefaultStyles?: boolean
  linkClass?: string
}
const {
  attrs,
  mainBemClass,
  isIndex,
  isCurrent,
  disableDefaultStyles,
  linkClass,
} = Astro.props as BreadcrumbLinkProps

const cssClasses = [
  !disableDefaultStyles && `${mainBemClass}__link`,
  !disableDefaultStyles && { 'is-current': isCurrent },
  !disableDefaultStyles && { 'is-index': isIndex },
  linkClass,
]
---

<a
  {...attrs}
  class:list={cssClasses}
  aria-current={isCurrent ? 'location' : false}
>
  <slot name='index' />
</a>
